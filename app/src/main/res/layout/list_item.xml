<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single superhero list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_margin="@dimen/activity_margin">

    <ImageView
        android:id="@+id/list_item_thumbnail"
        android:layout_width="@dimen/superhero_img_list"
        android:layout_height="@dimen/superhero_img_list"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingStart="@dimen/activity_margin">

        <TextView
            android:id="@+id/list_item_superhero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Winter Soldier"/>

        <TextView
            android:id="@+id/list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="01-февраль-2016 10:10"/>

    </LinearLayout>

</LinearLayout>